#!/bin/sh

# DO NOT make any manual changes to this file.
# This file is maintained by CHEF.
# Actions supported: start, stop and restart

START_SCRIPT=thin start -C <%= @thin_config %>
PIDFILE=<%= @pid_file %>
LOGFILE=<%= @log_file %>

start() {
  
  export BUNDLE_GEMFILE="<%= @app_dir %>/Gemfile"
  export PATH="<%= @ruby_bin %>:$PATH"

  if [ -f /var/run/$PIDNAME ] && kill -0 $(cat "$PIDFILE"); then
    echo 'Service is already running' >&2
    RETURN_VALUE=1
  else
    echo 'Starting service…' >&2
    local CMD="$START_SCRIPT &> \"$LOGFILE\" & echo \$!"
    "$CMD" > "$PIDFILE"
    echo 'Service started' >&2
    RETURN_VALUE=0
  fi
}

stop() {
  if [ -f "$PIDFILE" ] && kill -0 $(cat "$PIDFILE"); then
    echo 'Stopping service…' >&2
    kill -15 $(cat "$PIDFILE") && rm -f "$PIDFILE"
    echo 'Service stopped' >&2
    RETURN_VALUE=0
  else
    echo 'Service is not running' >&2
    RETURN_VALUE=1
  fi
}

_status() {
  status -p $PIDFILE 
  RETURN_VALUE=$?
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  status)
    _status
    ;;
  retart)
    stop
    start
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|uninstall}"
esac

exit RETURN_VALUE
